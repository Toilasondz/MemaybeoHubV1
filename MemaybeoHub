    end, ContentFrame)

    -- Toggle 5: Team Check
    local TeamCheckToggleBtn = createToggle("Team Check", TEAMCHECK_ENABLED, function(toggle, subtext)
        TEAMCHECK_ENABLED = not TEAMCHECK_ENABLED
