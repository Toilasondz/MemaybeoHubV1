-- CHAT UI (Safe, Works in your own game)
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local TextChatService = game:GetService("TextChatService")

-- Create ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "ChatUI"
gui.ResetOnSpawn = false
gui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

-- Main frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 120)
frame.Position = UDim2.new(0.5, -150, 0.7, -60)
frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
frame.Parent = gui

local corner = Instance.new("UICorner", frame)
corner.CornerRadius = UDim.new(0, 8)

-- Textbox for typing
local textbox = Instance.new("TextBox")
textbox.Parent = frame
textbox.Size = UDim2.new(1, -20, 0, 40)
textbox.Position = UDim2.new(0, 10, 0, 10)
textbox.PlaceholderText = "Type message..."
textbox.Text = ""
textbox.BackgroundColor3 = Color3.fromRGB(55, 55, 55)
textbox.TextColor3 = Color3.fromRGB(255,255,255)
Instance.new("UICorner", textbox)

-- Send Button
local sendButton = Instance.new("TextButton")
sendButton.Parent = frame
sendButton.Size = UDim2.new(1, -20, 0, 40)
sendButton.Position = UDim2.new(0, 10, 0, 60)
sendButton.Text = "Send Chat"
sendButton.BackgroundColor3 = Color3.fromRGB(80, 80, 255)
sendButton.TextColor3 = Color3.fromRGB(255,255,255)
Instance.new("UICorner", sendButton)

-- Send message
sendButton.MouseButton1Click:Connect(function()
	local msg = textbox.Text

	if msg ~= "" then
		TextChatService.TextChannels.RBXGeneral:SendAsync(msg)
		textbox.Text = ""
	end
end)
