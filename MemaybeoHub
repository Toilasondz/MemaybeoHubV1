        Button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        Button.BackgroundTransparency = 0.5
        local cornerFrame = Instance.new("UICorner", Button)
        cornerFrame.CornerRadius = UDim.new(0, 5)

        local Title = Instance.new("TextLabel", Button)
        Title.Size = UDim2.new(1, 0, 0.5, 0)
        Title.Position = UDim2.new(0, 10, 0, 0)
        Title.BackgroundTransparency = 1
        Title.Text = text
        Title.TextColor3 = Color3.fromRGB(255, 255, 255)
        Title.Font = Enum.Font.SourceSansBold
        Title.TextSize = 16
        Title.TextXAlignment = Enum.TextXAlignment.Left

        local SubText = Instance.new("TextLabel", Button)
        SubText.Size = UDim2.new(1, 0, 0.5, 0)
        SubText.Position = UDim2.new(0, 10, 0.5, 0)
        SubText.BackgroundTransparency = 1
        SubText.Text = subText
        SubText.TextColor3 = Color3.fromRGB(200, 200, 200)
        SubText.Font = Enum.Font.SourceSans
        SubText.TextSize = 14
        SubText.TextXAlignment = Enum.TextXAlignment.Left

        Button.MouseButton1Click:Connect(function()
            if GUI_CLOSED then return end
            clickFunction()
        end)
    end
    
    local function createSlider(text, initialValue, minValue, maxValue, updateFunction, parent)
        local frame = Instance.new("Frame", parent)
        frame.Size = UDim2.new(1, -20, 0, 50) 
        frame.Position = UDim2.new(0, 10, 0, 0)
        frame.BackgroundTransparency = 1
        
        local Title = Instance.new("TextLabel", frame)
        Title.Size = UDim2.new(1, 0, 0.4, 0)
        Title.Position = UDim2.new(0, 0, 0, 0)
        Title.BackgroundTransparency = 1
        Title.Text = text
        Title.TextColor3 = Color3.fromRGB(255, 255, 255)
        Title.Font = Enum.Font.SourceSans
        Title.TextSize = 16
        Title.TextXAlignment = Enum.TextXAlignment.Left

        local ValueLabel = Instance.new("TextLabel", frame)
        ValueLabel.Size = UDim2.new(0.3, 0, 0.4, 0)
        ValueLabel.Position = UDim2.new(0.7, 0, 0, 0)
        ValueLabel.BackgroundTransparency = 1
        ValueLabel.Text = string.format("%.1f", initialValue)
        ValueLabel.TextColor3 = Color3.fromRGB(0, 170, 255)
        ValueLabel.Font = Enum.Font.SourceSansBold
        ValueLabel.TextSize = 16
        ValueLabel.TextXAlignment = Enum.TextXAlignment.Right

        -- Slider Bar Background
        local SliderBg = Instance.new("Frame", frame)
        SliderBg.Size = UDim2.new(1, 0, 0, 8)
        SliderBg.Position = UDim2.new(0, 0, 0.6, 0)
        SliderBg.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        local cornerBar = Instance.new("UICorner", SliderBg)
        cornerBar.CornerRadius = UDim.new(0, 4)

        -- Slider Bar Fill
        local fillRatio = (initialValue - minValue) / (maxValue - minValue)
        local SliderFill = Instance.new("Frame", SliderBg)
        SliderFill.Size = UDim2.new(fillRatio, 0, 1, 0)
        SliderFill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)

        -- Slider Handle
        local SliderHandle = Instance.new("ImageButton", SliderBg)
        SliderHandle.Size = UDim2.new(0, 15, 0, 15)
        SliderHandle.BackgroundTransparency = 1
        SliderHandle.Image = "rbxassetid://603417772" 
        SliderHandle.ImageColor3 = Color3.fromRGB(255, 255, 255)
        SliderHandle.ZIndex = 2
        
        local handlePos = UDim2.new(fillRatio, -SliderHandle.Size.Offset.X * fillRatio, 0.5, -SliderHandle.Size.Offset.Y/2)
        SliderHandle.Position = handlePos
        
        -- Logic kéo thả Slider
        local dragging = false
        SliderHandle.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                dragging = true
                UserInputService.InputEnded:Wait()
                dragging = false
            end
        end)

        RunService.RenderStepped:Connect(function()
            if dragging then
                local absPos = UserInputService:GetMouseLocation()
                local x = math.min(math.max(absPos.X - SliderBg.AbsolutePosition.X, 0), SliderBg.AbsoluteSize.X)
                local ratio = x / SliderBg.AbsoluteSize.X
                
                local newValue = minValue + ratio * (maxValue - minValue)
                
                -- Cập nhật giá trị
                updateFunction(newValue)
                
                -- Cập nhật UI
                SliderFill.Size = UDim2.new(ratio, 0, 1, 0)
                SliderHandle.Position = UDim2.new(ratio, -SliderHandle.Size.Offset.X * ratio, 0.5, -SliderHandle.Size.Offset.Y/2)
                ValueLabel.Text = string.format("%.1f", newValue)
            end
        end)
        
        return ValueLabel 
    end


