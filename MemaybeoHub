-- ExampleLocal (LocalScript)
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local SimpleUI_Module = ReplicatedStorage:WaitForChild("SimpleUI")
local SimpleUI = require(SimpleUI_Module)

local ui = SimpleUI.new({title = "MyDevMenu"})

-- Tab 1
local tab1 = ui:AddTab("Main")
tab1:AddLabel("Main features")
tab1:AddButton("Say Hello", function()
    print("Hello from UI Button!")
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "SimpleUI";
        Text = "Hello pressed!";
        Duration = 2;
    })
end)

local togg = tab1:AddToggle("Auto Do Thing", false, function(state)
    print("Toggle state:", state)
    -- do something in your game (client-side)
end)

local slider = tab1:AddSlider("Speed Multiplier", 1, 20, 1, function(val)
    -- Example: change walk speed (client cannot set server Character on its own reliably in every game)
    local player = game.Players.LocalPlayer
    if player and player.Character and player.Character:FindFirstChild("Humanoid") then
        player.Character.Humanoid.WalkSpeed = math.clamp(16 * val, 0, 200)
    end
end)

-- Tab 2
local tab2 = ui:AddTab("Settings")
tab2:AddLabel("Settings go here")
tab2:AddButton("Close UI", function() ui:SetVisible(false) end)

-- Optional: toggle UI with a key (RightControl by default)
local UserInputService = game:GetService("UserInputService")
local visible = true
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == Enum.KeyCode.RightControl then
        visible = not visible
        ui:SetVisible(visible)
    end
end)
